{
  "files": [
    "handlers/**/*"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "esnext",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2019"
    ],
    "rootDir": "./src"
  }
}
